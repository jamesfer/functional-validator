{
  "name": "functional-validator",
  "version": "0.1.0",
  "description": "Simple, adaptable, type-safe validator",
  "main": "dist/index-externals.js",
  "module": "dist/es6/index.js",
  "typings": "dist/typings/index.d.ts",
  "sideEffects": false,
  "author": "James Ferguson",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "test": "jest src/**",
    "test:integration": "jest tests/**",
    "build": "yarn build:declaration && yarn build:umd && yarn build:cjs && yarn build:esm5 && yarn build:esm2015",
    "build:declaration": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:umd": "rollup --config --environment module:umd,target:es5",
    "build:cjs": "rollup --config --environment module:cjs,target:es5",
    "build:esm5": "rollup --config --environment module:esm,target:es5",
    "build:esm2015": "rollup --config --environment module:esm,target:es2015",
    "validate": "yarn lint && yarn test && yarn build && yarn test:integration"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/tests/.*|/src/.+\\.spec\\.ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "lodash-es": "^4.17.11",
    "tslib": "^1.8.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/lodash-es": "^4.17.1",
    "jest": "^23.6.0",
    "rollup": "^0.66.2",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.8.3"
  }
}
