{
  "name": "functional-validator",
  "version": "1.0.0",
  "description": "Simple, adaptable, type-safe validator",
  "author": "James Ferguson",
  "license": "MIT",
  "main": "dist/umd.js",
  "browser": "dist/umd.min.js",
  "module": "dist/esm5.js",
  "es2015": "dist/esm2015.js",
  "typings": "dist/typings/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "build": "yarn build:declaration && yarn build:rollup",
    "build:declaration": "tsc --project tsconfig.build.json --outDir dist/typings --declaration --emitDeclarationOnly",
    "build:rollup": "rollup --config",
    "validate": "yarn lint && yarn test && yarn build"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}\n[skip ci]\n"
      }
    ]
  },
  "babel": {
    "plugins": [
      "lodash"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!lodash-es).*"
    ],
    "testRegex": "(/tests/.*|/src/.+\\.spec\\.ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "lodash-es": "^4.17.11",
    "tslib": "^1.8.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.4",
    "@types/jest": "^23.3.2",
    "@types/lodash-es": "^4.17.1",
    "babel-plugin-lodash": "^3.3.4",
    "commitizen": "^2.10.1",
    "jest": "^23.6.0",
    "rollup": "^0.66.2",
    "rollup-plugin-analyzer": "^2.1.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "semantic-release": "^15.9.16",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.8.3"
  }
}
