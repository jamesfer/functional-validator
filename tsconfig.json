{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/typings",
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
