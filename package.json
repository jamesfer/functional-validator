{
  "name": "functional-validator",
  "version": "1.0.0",
  "description": "Simple, adaptable, type-safe validator",
  "main": "dist/cjs5.js",
  "module": "dist/esm5",
  "typings": "dist/typings/index.d.ts",
  "sideEffects": false,
  "author": "James Ferguson",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "build": "yarn build:declaration && yarn build:umd && yarn build:cjs5 && yarn build:cjs2015 && yarn build:esm5 && yarn build:esm2015",
    "build:declaration": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:umd": "rollup --config --environment module:umd,target:es5,name:umd",
    "build:cjs5": "rollup --config --environment module:cjs,target:es5",
    "build:cjs2015": "rollup --config --environment module:cjs,target:es2015",
    "build:esm5": "rollup --config --environment module:esm,target:es5",
    "build:esm2015": "rollup --config --environment module:esm,target:es2015",
    "validate": "yarn lint && yarn test && yarn build"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}\n[skip ci]\n"
      }
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!lodash-es).*"
    ],
    "testRegex": "(/tests/.*|/src/.+\\.spec\\.ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "lodash-es": "^4.17.11",
    "tslib": "^1.8.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/lodash-es": "^4.17.1",
    "jest": "^23.6.0",
    "rollup": "^0.66.2",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "semantic-release": "^15.9.16",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.8.3"
  }
}
